{
    "name": "node-app",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc --build",
        "build:composite": "tsc --composite false",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --collectCoverage",
        "test:output": "jest --json --outputFile=test-results.json",
        "start1": "ts-node src/index.ts",
        "start": "ts-node-dev --respawn --transpile-only src/index.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@jest/types": "^27.5.1",
        "@types/config": "^0.0.41",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.16",
        "@types/supertest": "^2.0.11",
        "config": "^3.3.7",
        "dotenv": "^16.0.0",
        "express": "^4.17.2",
        "jest": "^27.5.1",
        "jest-html-reporter": "^3.4.2",
        "jest-mock": "^27.5.1",
        "pg-mem": "^2.3.3",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typeorm": "^0.2.29",
        "typescript": "^4.5.5"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "tsconfig": "./tests/tsconfig.json"
            }
        },
        "verbose": true,
        "roots": [
            "./src/",
            "./tests/"
        ],
        "collectCoverageFrom": [
            "**/*.{ts,tsx}",
            "!**/index.ts",
            "!**/ormconfig.ts"
        ],
        "coverageThreshold": {
            "global": {
                "functions": 50,
                "statements": 50,
                "branches":30,
                "lines": 50
            }
        },
        "coverageDirectory": "./reports/coverage",
        "testResultsProcessor": "./node_modules/jest-html-reporter"
    }
}
